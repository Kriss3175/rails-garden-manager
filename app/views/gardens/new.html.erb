<div class="pt-30 container">
  <h1 class="text-center">New Garden</h1>
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(@garden) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :name, as: :string, required: false, placeholder: "My urban garden", label: "Name of your garden" %>
          <%= f.input :banner_url, as: :text, required: false, placeholder: "My url image", label: "https://some_nice_image_found_on_google.jpg" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-flat" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

